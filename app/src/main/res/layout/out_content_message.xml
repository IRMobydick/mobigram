<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <FrameLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="end"
        android:background="@drawable/msg_out_photo">

        <FrameLayout
            android:id="@+id/out_content"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
        </FrameLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|right"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/out_content_msg_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="@dimen/padding_3dp"
                android:textColor="#ffd0d0d0"
                android:textSize="@dimen/message_time_text_size"
                android:background="#877c7c7c"
                android:layout_margin="@dimen/margin_3dp"
                />
        </LinearLayout>
    </FrameLayout>
</FrameLayout>