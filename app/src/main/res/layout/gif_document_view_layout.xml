<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/document_icon"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:scaleType="fitCenter" />

        <FrameLayout
            android:id="@+id/gif_blend"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/gif_document_view_background">

        </FrameLayout>

        <ImageView
            android:id="@+id/document_load_icon"
            android:layout_width="@dimen/gif_document_icon_size"
            android:layout_height="@dimen/gif_document_icon_size"
            android:layout_gravity="center"
            android:scaleType="fitCenter"
            android:src="@drawable/photogif" />

    </FrameLayout>

</LinearLayout>