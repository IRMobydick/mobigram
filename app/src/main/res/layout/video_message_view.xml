<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/video_icon"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:scaleType="fitCenter" />

        <FrameLayout
            android:id="@+id/video_blend"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/video_message_background">

        </FrameLayout>

        <ImageView
            android:id="@+id/video_load_icon"
            android:layout_width="@dimen/video_load_icon_size"
            android:layout_height="@dimen/video_load_icon_size"
            android:layout_gravity="center"
            android:scaleType="fitCenter"
            android:src="@drawable/photoload" />

        <ProgressBar
            android:id="@+id/download_video_progress_bar"
            style="@style/Widget.AppCompat.ProgressBar"
            android:layout_width="@dimen/video_load_progress_bar_size"
            android:layout_height="@dimen/video_load_progress_bar_size"
            android:layout_gravity="center"
            android:visibility="gone" />

    </FrameLayout>

</LinearLayout>