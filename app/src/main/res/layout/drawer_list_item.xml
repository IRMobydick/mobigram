<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/drawer_list_item_height"
    android:background="@drawable/activated_background"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/navigation_item_icon"
        android:layout_width="@dimen/drawer_item_image_size"
        android:layout_height="@dimen/drawer_item_image_size"
        android:layout_gravity="center_vertical"
        android:padding="@dimen/padding_5dp" />

    <TextView
        android:id="@+id/navigation_item_title"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:gravity="center_vertical"
        android:paddingLeft="@dimen/drawer_item_title_padding"
        android:textColor="@color/drawer_text"
        android:textSize="@dimen/drawer_item_text_size" />

</LinearLayout>