<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal">

    <TextView
        android:id="@+id/contackt_message_icon"
        android:layout_width="@dimen/toolbar_icon_size"
        android:layout_height="@dimen/toolbar_icon_size"
        android:layout_margin="@dimen/margin_5dp"
        android:gravity="center"
        android:textColor="#fff"
        android:textSize="@dimen/toolbar_icon_text_size"
        />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:minWidth="200dp"
        android:layout_marginLeft="@dimen/margin_3dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/contact_message_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#000"
            android:textSize="@dimen/toolbar_name_text_size"
            android:textStyle="bold"
            />

        <TextView
            android:id="@+id/contact_message_phone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textColor="#000"
            android:textSize="@dimen/toolbar_last_seen_text_size"
            android:paddingRight="40dp"
            />

    </LinearLayout>

</LinearLayout>