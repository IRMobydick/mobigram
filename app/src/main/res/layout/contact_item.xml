<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/contact_list_selector"
    android:orientation="horizontal">

    <TextView
        android:id="@+id/message_icon"
        android:layout_width="@dimen/contact_list_item_icon_size"
        android:layout_height="@dimen/contact_list_item_icon_size"
        android:layout_margin="@dimen/margin_5dp"
        android:gravity="center"
        android:textColor="#fff"
        android:textSize="@dimen/contact_list_icon_text_size" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_margin="@dimen/margin_5dp"
        android:gravity="center_vertical"
        android:orientation="vertical">

        <TextView
            android:id="@+id/firstLastName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#000"
            android:textSize="@dimen/contact_list_item_name_text_size"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/lastSeen"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:singleLine="true"
            android:textColor="#000"
            android:textSize="@dimen/contact_list_item_last_message_size" />

    </LinearLayout>
</LinearLayout>