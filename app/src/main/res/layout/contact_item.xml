<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/contact_list_selector"
    android:orientation="horizontal">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/message_icon_text"
            android:layout_width="@dimen/contact_list_item_icon_size"
            android:layout_height="@dimen/contact_list_item_icon_size"
            android:layout_margin="@dimen/margin_5dp"
            android:gravity="center"
            android:textColor="#fff"
            android:textSize="@dimen/contact_list_icon_text_size" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_margin="@dimen/margin_5dp"
            android:gravity="center_vertical"
            android:orientation="vertical">

            <TextView
                android:id="@+id/firstLastName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#000"
                android:textSize="@dimen/contact_list_item_name_text_size"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/lastMessage"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:singleLine="true"
                android:textColor="#000"
                android:textSize="@dimen/contact_list_item_last_message_size" />

        </LinearLayout>
    </LinearLayout>

    <TextView
        android:id="@+id/contactItemTime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="end"
        android:layout_margin="@dimen/margin_10dp"
        android:textColor="#000" />

</FrameLayout>