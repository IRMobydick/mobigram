<resources>

    <style name="customAppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowNoTitle">true</item>
        <item name="colorAccent">@color/background_action_bar</item>
        <item name="drawerArrowStyle">@style/MyDrawerArrowToggle</item>
        <item name="searchViewStyle">@style/AppTheme.SearchView</item>
    </style>

    <style name="MyDrawerArrowToggle" parent="Widget.AppCompat.DrawerArrowToggle">
        <item name="color">#fff</item>
    </style>

    <style name="AppTheme.SearchView" parent="Widget.AppCompat.SearchView">
        <item name="closeIcon">@drawable/ic_close_white</item>
    </style>

    <style name="Theme.AppCompat.Translucent" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:colorBackgroundCacheHint">@null</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowAnimationStyle">@android:style/Animation</item>
        <item name="android:textColorPrimary">#fff</item>
        <item name="searchViewStyle">@style/AppTheme.SearchView</item>
    </style>

    <style name="ToolbarCustom" parent="Base.Widget.AppCompat.SearchView">
    </style>

    <style name="Theme.AppCompat.Translucent.TranslucentStatusBar" parent="Theme.AppCompat.Translucent">
        <item name="android:windowTranslucentStatus">true</item>
        <item name="android:windowTranslucentNavigation">true</item>
    </style>
</resources>