<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/transparent_activity_background"
    android:id="@+id/transparent_layout"
    >

    <android.support.v7.widget.CardView
        android:layout_width="@dimen/width_land_sw600"
        android:layout_height="@dimen/height_land_sw600"
        android:layout_gravity="center"
        card_view:cardElevation="8sp">

        <ProgressBar
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/Widget.AppCompat.ProgressBar"
            android:layout_gravity="center"
            />

        <FrameLayout
            android:id="@+id/transparent_content"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        </FrameLayout>

    </android.support.v7.widget.CardView>

</FrameLayout>